@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Band.Models.Instrument>

@{
    ViewBag.Title = "Archive";
}

<h2>Archived Information</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstrumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCheckedOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaintenanceNeeded)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.InstrumentName)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentIn)
            </td>
            <td>
                @{
                    if (item.IsCheckedOut){
                        <p>Checked Out</p>
                    }
                    else {
                        <p>Checked In</p>
                    }
                 }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceNeeded)
            </td>
        </tr>
    }

</table>

